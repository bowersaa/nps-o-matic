%h1= t('.title')

.row
  .card-column
    %p.card-title= t('.rate')

    .card
      %p= t('.how_likely')
      .row
        - 0.upto(10) do |i|
          = form_for Rating.new(score: i) do |f|
            = f.hidden_field :score
            = f.submit i
      .rating
        %span.left
          Very Unlikely
        %span.right
          Very Likely

  .card-column
    %p.card-title= t('.appreciate')

    .card
      %p= pluralize Rating.count, 'Rating'


      %p
        = number_to_percentage Rating.promoters_percentage
        =t('.promoters')

      %p
        = number_to_percentage Rating.detractors_percentage
        =t('.detractors')

      %p
        =t('.nps')
        = Rating.nps
.row
  %p= t('.color_legend')

  .scale
    &nbsp;

= image_tag ('nps-o-matic.png')
